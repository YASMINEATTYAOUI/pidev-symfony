{% extends 'index.html.twig' %}

{% block title %}Feed
{% endblock %}

{% block centent %}


	<div
		class="antialiased bg-gray-50 dark:bg-gray-900 p-4">
		{# Post Container #}
		<div
			class="max-w-2xl mx-auto bg-white dark:bg-gray-800 rounded-lg shadow mb-6">
			{# Post Header #}
			<div class="p-4 flex items-start justify-between border-b border-gray-200 dark:border-gray-700">
				<div
					class="flex items-center">
					{# <img src="{{ user.avatar }}" alt="{{ user.name }}" class="w-10 h-10 rounded-full object-cover"> #}
					<img src="https://flowbite.com/docs/images/people/profile-picture-5.jpg" alt="User profile" class="w-10 h-10 object-cover">
					<div
						class="ml-3">
						{# <h3 class="text-sm font-semibold text-gray-900 dark:text-white">{{ user.name }}</h3>
																								<p class="text-xs text-gray-500 dark:text-gray-400">{{ post.date }}</p> #}
						<h3 class="text-sm font-semibold text-gray-900 dark:text-white">jane</h3>
						<p class="text-xs text-gray-500 dark:text-gray-400">friday 15 march</p>
					</div>
				</div>
				<button class="text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300">
					<svg class="w-5 h-5" fill="currentColor" viewbox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
						<path d="M10 6a2 2 0 110-4 2 2 0 010 4zM10 12a2 2 0 110-4 2 2 0 010 4zM10 18a2 2 0 110-4 2 2 0 010 4z"></path>
					</svg>
				</button>
			</div>

			{# Post Content #}
			<div
				class="p-4">
				{# <p class="text-sm text-gray-700 dark:text-gray-300 mb-4">{{ post.content }}</p> #}

				<p class="text-sm text-gray-700 dark:text-gray-300 mb-4">ggggggggggggggggggggggggggggggggggggggggg</p>

				{# Image Gallery - 2 Column Grid #}
				<div class="grid grid-cols-2 gap-2 mb-2 ">

					<div
						class="overflow-hidden rounded-lg bg-gray-100 dark:bg-gray-700 " >
						{# <img src="{{ post.image }}" alt="Post image" class="w-full h-auto object-cover"> #}

						<img src="https://flowbite.com/docs/images/people/profile-picture-5.jpg" alt="Post image" class="w-full h-auto object-cover">

					</div>

				</div>
			</div>

			{# Post Actions #}
			<div class="px-4 py-3 border-t border-gray-200 dark:border-gray-700 flex items-center space-x-4">
				<div class="flex items-center text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300">
					<svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" viewbox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
					</svg>
					{# <span class="text-xs font-medium">{{ post.comments }} #}
					<span class="text-xs font-medium">533
												Comments</span>
				</div>
				<div class="flex items-center text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300">
					<svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" viewbox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
					</svg>
					{# <span class="text-xs font-medium">{{ post.likes }} #}
					<span class="text-xs font-medium">7865
												Likes</span>
				</div>
			</div>

			{# Comment Input #}
			<div class="p-4 border-t border-gray-200 dark:border-gray-700">
				<div class="flex items-center">
					<svg class="w-6 h-6 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" viewbox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
					</svg>
					<input type="text" placeholder="Write your response" class="ml-2 flex-1 bg-transparent text-sm text-gray-600 dark:text-gray-300 focus:outline-none"/>
				</div>
			</div>
		</div>

		
	</div>

{% endblock %}
