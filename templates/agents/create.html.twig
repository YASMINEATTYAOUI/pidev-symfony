{% extends 'base.html.twig' %}

{% block title %}Create Agent{% endblock %}

{% block body %}
<h1 class="text-2xl font-bold mb-4">Create a New Agent</h1>

<form method="post" action="{{ path('api_create_agent') }}" class="space-y-4">
    <div>
        <label for="username" class="block text-sm font-medium text-gray-700">Username:</label>
        <input type="text" id="username" name="username" required class="border rounded px-4 py-2 w-full">
    </div>
    <div>
        <label for="password" class="block text-sm font-medium text-gray-700">Password:</label>
        <input type="password" id="password" name="password" required class="border rounded px-4 py-2 w-full">
    </div>
    <div>
        <label for="agentFullName" class="block text-sm font-medium text-gray-700">Full Name:</label>
        <input type="text" id="agentFullName" name="agentFullName" required class="border rounded px-4 py-2 w-full">
    </div>
    <div>
        <label for="agentEmail" class="block text-sm font-medium text-gray-700">Email:</label>
        <input type="email" id="agentEmail" name="agentEmail" required class="border rounded px-4 py-2 w-full">
    </div>
    <div>
        <label for="agentPhoneNumber" class="block text-sm font-medium text-gray-700">Phone Number:</label>
        <input type="text" id="agentPhoneNumber" name="agentPhoneNumber" required class="border rounded px-4 py-2 w-full">
    </div>
    <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded">Create Agent</button>
</form>
{% endblock %}
