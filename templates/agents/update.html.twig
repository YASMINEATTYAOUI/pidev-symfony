{% extends 'base.html.twig' %}

{% block title %}Update Agent{% endblock %}

{% block body %}
<h1>Update Agent</h1>

<form method="post" action="{{ path('api_update_agent', { id: agent.id }) }}">
    <div>
        <label for="fullName">Full Name:</label>
        <input type="text" id="fullName" name="fullName" value="{{ agent.fullName }}">
    </div>
    <div>
        <label for="email">Email:</label>
        <input type="email" id="email" name="email" value="{{ agent.email }}">
    </div>
        <label for="phoneNumber">Phone Number:</label>
        <input type="text" id="phoneNumber" name="phoneNumber" value="{{ agent.phoneNumber }}">
    </div>

    <button type="submit">Update</button>

</form>
{% endblock %}
